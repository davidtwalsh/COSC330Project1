<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".StoryChoice">

    <Button
        android:id="@+id/button3"
        android:layout_width="248dp"
        android:layout_height="118dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#3D3D3D"
        android:onClick="enterMariahStory"
        android:text="Mariah's Story"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="248dp"
        android:layout_height="118dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3D3D3D"
        android:onClick="enterJohnStory"
        android:text="John's Story"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button5"
        android:layout_width="248dp"
        android:layout_height="118dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3D3D3D"
        android:onClick="enterAliciaStory"
        android:text="Alicia's Story"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="248dp"
        android:layout_height="118dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3D3D3D"
        android:onClick="enterLarisaStory"
        android:text="Larisa's Story"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />
</androidx.constraintlayout.widget.ConstraintLayout>