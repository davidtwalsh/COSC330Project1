<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".ReadingChoice">

    <Button
        android:id="@+id/rc_but1"
        android:layout_width="269dp"
        android:layout_height="148dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#3D3D3D"
        android:onClick="enterReadingOne"
        android:text="Reading Exercise 1"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rc_but2"
        android:layout_width="269dp"
        android:layout_height="148dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="#3D3D3D"
        android:onClick="enterReadingTwo"
        android:text="Reading Exercise 2"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rc_but1" />

    <Button
        android:id="@+id/rc_but3"
        android:layout_width="269dp"
        android:layout_height="148dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="#3D3D3D"
        android:onClick="enterReadingThree"
        android:text="Reading Exercise 3"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rc_but2" />
</androidx.constraintlayout.widget.ConstraintLayout>