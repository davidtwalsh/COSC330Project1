<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".VocabularyChapters">

    <Button
        android:id="@+id/wordsChapterOne"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#3D3D3D"
        android:onClick="enterChapterOneVocab"
        android:text="Chapter 1 Vocabulary"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/wordsChapterTwo"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3D3D3D"
        android:onClick="enterChapterTwoVocab"
        android:text="Chapter 2 Vocabulary"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordsChapterOne" />

    <Button
        android:id="@+id/wordsChapterThree"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3D3D3D"
        android:onClick="enterChapterThreeVocab"
        android:text="Chapter 3 Vocabulary"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordsChapterTwo" />

    <Button
        android:id="@+id/wordsChapterFour"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3D3D3D"
        android:onClick="enterChapterFourVocab"
        android:text="Chapter 4 Vocabulary"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordsChapterThree" />
</androidx.constraintlayout.widget.ConstraintLayout>